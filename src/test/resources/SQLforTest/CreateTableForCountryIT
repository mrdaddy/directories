CREATE TABLE ETICKET.COUNTRIES (
ID                      INTEGER GENERATED BY DEFAULT AS IDENTITY (START WITH 1, INCREMENT BY 1) NOT NULL CONSTRAINT COUNTRIES_PK1 PRIMARY KEY,
CODE                    VARCHAR(3) NOT NULL,
NAME_RU                 VARCHAR(128) NOT NULL,
NAME_EN                 VARCHAR(64) NOT NULL,
TICKET_SELLING_ALLOWED  CHAR (1) NOT NULL DEFAULT '0',
STATION_SELECT_PRIORITY SMALLINT,
TIME_ZONE               VARCHAR(32),
DEPARTURE_MSG_RU        VARCHAR(128),
DEPARTURE_MSG_EN        VARCHAR(64),
ARRIVAL_MSG_RU          VARCHAR(128),
ARRIVAL_MSG_EN          VARCHAR(64),
IS_GLOBAL_PRICE	       CHAR(1) NOT NULL DEFAULT '0',
FREE_TICKET_AGE         SMALLINT NOT NULL DEFAULT 5,
CHILDREN_TICKET_AGE     SMALLINT NOT NULL DEFAULT 10)